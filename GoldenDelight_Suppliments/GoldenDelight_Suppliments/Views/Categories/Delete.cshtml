@model GoldenDelight_Suppliments.Models.Category

@{
    ViewBag.Title = "Delete";
}

<div class="jumbotron">
    <div class="container">
        <h3 class="title text-center">Remove Category</h3>

        <h3 class="text-danger">Are you sure you want to remove this category?</h3>
        <div>
            <hr />
                <div class="form-group">
                    <label class="control-label col-md-2"><b>Category</b></label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" value="@Html.DisplayFor(x=>x.CategoryName)" readonly="readonly" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2"><b>Description</b></label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" value="@Html.DisplayFor(x=>x.Description)" readonly="readonly" />
                    </div>
                </div>
            <br />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Remove" class="btn btn-danger" /> 
                </div>
            }
        </div>
    </div>
</div>
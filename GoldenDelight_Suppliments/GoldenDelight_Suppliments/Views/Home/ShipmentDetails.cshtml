@model GoldenDelight_Suppliments.Models.Shipment

@{
    ViewBag.Title = "ShipmentDetails";
}

<div class="modal-header">
    <h4 class="modal-title">Shipment Details</h4>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true"><i class="fa fa-times-circle"></i></span>
    </button>
</div>
<div class="modal-body">

    <div class="form-group">
        <label class="col-md-2"><b>Delivery&nbsp;Date</b></label>
        <div class="col-md-10">
            <input type="text" class="form-control" value="@Model.DeliveryDate.ToString("dd-MMM-yyyy")" readonly="readonly" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2"><b>Arrival&nbsp;Estimate</b></label>
        <div class="col-md-10">
            <input type="text" class="form-control" value="@Model.ArrivalDate.ToString("dd-MMM-yyyy")" readonly="readonly" />
        </div>
    </div>

    <div class="modal-footer">
        <button class="btn btn-warning" data-dismiss="modal">CLOSE</button>
    </div>
</div>

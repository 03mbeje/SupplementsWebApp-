@using GoldenDelight_Suppliments.Models;
@model OrderViewModel

@{
    ViewBag.Title = "Order Review";
}

<div class="jumbotron">
    <div class="container" style="margin-top:8vh;">
        <h2 class="text-center"><b>Review Your Order</b></h2>
        <br />
        @Html.HiddenFor(m => m.OrderId)
        <table class="table table-hover">
            <tr class="table-active"><th colspan="4"><h5><b>Order Items</b></h5></th></tr>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Price
                </th>
                <th></th>
            </tr>


            @foreach (OrderItem orderItem in Model.orderItems)
            {

                <tr>
                    <td>
                        @orderItem.Suppliment.SupName
                    </td>
                    <td>
                        @orderItem.Quantity
                    </td>
                    <td>
                        @orderItem.Price.ToString("C")
                    </td>
                    <td></td>
                </tr>
            }
            <tr>
                <td><label><b>Total (Incl. Delivery)</b></label></td>
                <td></td>
                <td><b>@ViewBag.AllTotal</b></td>
                <td></td>
            </tr>
        </table>
        <br />
        <table class="table table-hover">
            <tr class="table-active text-center"><th colspan="5"><h5><b>Shipping Address</b></h5></th></tr>

            <tr>
                <th>Street</th>
                <th>Surbub</th>
                <th>City</th>
                <th>Province</th>
                <th>Postal Code</th>
            </tr>
            <tr>
                <td>@Html.DisplayFor(x => x.clientAddresses.Street)</td>
                <td>@Html.DisplayFor(x => x.clientAddresses.Suburb)</td>
                <td>@Html.DisplayFor(x => x.clientAddresses.City)</td>
                <td>@Html.DisplayFor(x => x.clientAddresses.Province)</td>
                <td>@Html.DisplayFor(x => x.clientAddresses.PostalCode)</td>
            </tr>
        </table>

        <div class="col-md-12 text-center">
                @Html.ActionLink("Secure Payment", "Secure_Payment", new { id = Model.OrderId }, new { @class = "btn btn-warning" })
        </div>
    </div>
</div>

